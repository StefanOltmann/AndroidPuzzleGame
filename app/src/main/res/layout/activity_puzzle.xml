<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PuzzleActivity"
    android:background="@drawable/table_background">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/puzzle_piece_placeholder"
        android:layout_marginLeft="@dimen/puzzle_piece_placeholder"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/puzzle_piece_placeholder"
        android:layout_marginRight="@dimen/puzzle_piece_placeholder"
        android:layout_marginBottom="@dimen/default_margin"
        android:background="@drawable/image_frame_border"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,3:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/puzzle_background_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/puzzle_piece_placeholder"
        android:layout_marginLeft="@dimen/puzzle_piece_placeholder"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/puzzle_piece_placeholder"
        android:layout_marginRight="@dimen/puzzle_piece_placeholder"
        android:layout_marginBottom="@dimen/default_margin"
        android:alpha="@dimen/puzzle_background_image_view_alpha"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,3:2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
